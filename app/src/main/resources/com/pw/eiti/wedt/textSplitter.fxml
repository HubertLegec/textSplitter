<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pw.eiti.wedt.TextSplitter">
    <top>
        <MenuBar>
            <Menu text="Model">
                <MenuItem onAction="#onLoadModelClick" text="Load" />
            </Menu>
        </MenuBar>
    </top>
    <center>
        <VBox prefWidth="100.0">
            <children>
                <Label text="Input file">
                    <VBox.margin>
                        <Insets left="5.0" top="10.0" />
                    </VBox.margin></Label>
                <HBox spacing="5.0">
                    <children>
                        <TextField fx:id="inputFileTF" promptText="Input file path..." HBox.hgrow="ALWAYS" />
                        <Button fx:id="inputFileBT" onAction="#onInputFileButtonClick" text="..." HBox.hgrow="ALWAYS" />
                    </children>
                    <VBox.margin>
                        <Insets left="5.0" right="5.0" top="5.0" />
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER" spacing="10.0">
                    <Button fx:id="processBT" disable="true" onAction="#onProcessButtonClick">Process</Button>
                    <Button fx:id="saveBT" disable="true" onAction="#onOutputFileButtonClick">Save</Button>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </HBox>
                <TabPane VBox.vgrow="ALWAYS">
                    <Tab closable="false" text="Input file">
                        <TextArea fx:id="inputPrevTA" editable="false" promptText="Input preview..." VBox.vgrow="ALWAYS">
                        </TextArea>
                    </Tab>
                    <Tab closable="false" text="Output file">
                        <TreeView fx:id="outputPrevTV" editable="false" VBox.vgrow="ALWAYS">
                        </TreeView>
                    </Tab>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </TabPane>
            </children>
        </VBox>
    </center>
    <bottom>
        <ToolBar>
            <Label fx:id="statusL" text="Model not loaded" />
        </ToolBar>
    </bottom>
</BorderPane>
